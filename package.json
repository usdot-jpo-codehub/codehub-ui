{
  "name": "codehub-ui",
  "description": "ITS CodeHub",
  "version": "3.4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/usdot-jpo-codehub/codehub-ui.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "aurelia-animator-css": "^1.0.4",
    "aurelia-bootstrap-select": "^1.4.1",
    "aurelia-bootstrapper": "^2.3.3",
    "aurelia-dialog": "^2.0.0",
    "aurelia-fetch-client": "^1.8.2",
    "aurelia-ui-virtualization": "^1.0.0-rc2",
    "bootstrap": "^4.5.2",
    "detect-browser": "^5.2.0",
    "echarts": "^4.9.0",
    "humanize-duration": "^3.23.1",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1",
    "showdown": "^1.9.1",
    "uswds": "^2.9.0",
    "whatwg-fetch": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.11.0",
    "@babel/register": "^7.10.5",
    "app-settings-loader": "^1.0.6",
    "aurelia-cli": "^2.0.0",
    "aurelia-loader-nodejs": "^1.1.0",
    "aurelia-pal-nodejs": "^2.0.0",
    "aurelia-testing": "^1.0.0",
    "aurelia-webpack-plugin": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^4.2.1",
    "cypress": "^5.0.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "eslint": "^7.7.0",
    "eslint-plugin-cypress": "^2.11.1",
    "expose-loader": "^1.0.0",
    "file-loader": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jest": "^26.4.0",
    "jest-cli": "^26.4.0",
    "jest-transform-stub": "^2.0.0",
    "json-loader": "^0.5.7",
    "knockout": "^3.5.1",
    "mini-css-extract-plugin": "^0.10.0",
    "minimatch": "^3.0.4",
    "promise-polyfill": "^8.1.3",
    "regenerator-runtime": "^0.13.7",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.3",
    "style-loader": "^1.2.1",
    "tree-kill": "^1.2.2",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build": "webpack --env.production --extractCss",
    "start": "webpack-dev-server --extractCss",
    "build:dev": "webpack --extractCss",
    "analyze": "webpack --env.production --analyze",
    "test": "au test",
    "e2e": "au cypress --run",
    "e2e:headless": "au cypress --start --run",
    "docker:build": "docker build --build-arg SONAR_TOKEN=$SONAR_TOKEN --build-arg CODEBUILD_GIT_BRANCH=$CODEBUILD_GIT_BRANCH -t codehub-ui:latest ."
  },
  "engines": {
    "node": ">=10.12.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "\\.spec\\.js$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.js"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/*.spec.js",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "lcovonly",
      "html",
      "text"
    ]
  }
}
